{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Golden Thread",
  "version": "0.1.0",
  "identifier": "com.goldenthread.app",
  "build": {
    "beforeDevCommand": "npm run dev -- --port 1420",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "13.3"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob: asset:; media-src 'self' data: blob: asset:; style-src 'self'; script-src 'self'; font-src 'self' data:; connect-src 'none'; object-src 'none'; base-uri 'self'; frame-ancestors 'none';",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/golden-thread.noindex/**"]
      }
    },
    "windows": [
      {
        "title": "Golden Thread",
        "width": 1100,
        "height": 760
      }
    ]
  }
}
